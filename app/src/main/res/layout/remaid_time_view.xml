<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/start_date_view"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/start_remaind_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07月29日"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_remaind_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期三"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/start_remaind_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:29"
                android:textSize="16dp"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/right_black_big_arrow"/>

    <LinearLayout
        android:id="@+id/end_date_view"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/end_remaind_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07月29日"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/end_remaind_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期三"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/end_remaind_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:29"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>